  <div class='browse-collections'>
    <div class="container">
      <div class="row">
        <h2><%= t('hyrax.homepage.collections.title') %></h2>
      </div>
      <header class="d-flex">
        <div class="browse-collections--view d-flex">
          <button class="button-toggle d-flex"><i class="fa fa-list" aria-hidden="true"></i><span>List</span></button>
          <button class="button-toggle active d-flex"><i class="fa fa-th" aria-hidden="true"></i><span>Grid</span></button>
        </div>
        <div class="browse-collections--toggles d-flex">
          <button class="button-toggle d-flex"><i class="fa fa-caret-up" aria-hidden="true"></i>A-Z</button>
          <button class="button-toggle d-flex">Group</button>
          <div name="group" role="listbox" aria-expanded="false" class="ui dropdown d-flex" tabindex="0">
            <div class="text" role="alert" aria-live="polite" aria-atomic="true">
              All Collections
            </div>
            <%# <div class="menu transition"> %>
              <%# <div role="option" aria-checked="true" aria-selected="true" class="active selected item" style="pointer-events: all">
                <span class="text">All Collections</span>
              </div> %>
              <%# <div role="option" aria-checked="false" aria-selected="false" class="item" style="pointer-events: all">
                <span class="text">Great Smoky Mountains Regional Collection</span>
              </div> %>
              <%# <div role="option" aria-checked="false" aria-selected="false" class="item" style="pointer-events: all">
                <span class="text">University Archives</span>
              </div> %>
              <%# <div role="option" aria-checked="false" aria-selected="false" class="item" style="pointer-events: all">
                <span class="text">Modern Political Archives</span>
              </div> %>
            <%# </div> %>
            </div>
          </div>
      </header>
      <div class='scroll'>
        <div class="row collections-row">
          <% @collections_list.each do |collection| %> 
            <%= render 'browse_collections', collection: collection %>
          <% end %>
        </div>
      </div>
    </div>   
  </div>
</section>



