<%# OVERRIDE from Hyrax 2.9.0 to add featured collection functionality %>
<%# OVERRIDE: Hyrax v3.4.2 - removed all hyrax theming for custom client theming for dc_repository theme
%>
<div class="col-xs-12 col-sm-6 col-md-4 collection-card-container d-flex">
  <div class="collection-card d-flex">
    <%= link_to [hyrax, collection] do %>
      <div class="collection-thumbnail center-block">
        <%= render_thumbnail_tag(collection, { class: "center-block", alt: "#{collection.title.first} #{ t('hyrax.homepage.admin_sets.thumbnail')}" }, {suppress_link: true}) %>
      </div>
      <div class='collection-content d-flex'>
        <div class= "collection-label d-flex">
          <%= link_to [hyrax, collection] do %>
            <%= collection.title.first %>
          <% end %>
        </div>
        <div class='collection-abstract d-flex'>
          <%= link_to [hyrax, collection] do %>
            <%= collection.abstract.first %>
          <% end %>
        </div>
        <div class='works-count'>
          <% works_total = ActiveFedora::SolrService.query("member_of_collection_ids_ssim:#{collection.id}").count %>
          <span><%= works_total %></span>
          <%= "Work".pluralize(works_total) %> 
        </div>
      </div>
    <% end %>
  </div>
</div>
